{
  "manifest_version": 2,
  "name": "图片下载",
  "version": "1.0",
  "description": "下载一个页面的图片",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "我的时钟",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "run_at": "document_end",
    "all_frames": false,
    "js": [
      "js/main.js"
    ]
  }],
  "permissions": [
    "downloads",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "web_accessible_resources": [
    "js/main.js"
  ]
}